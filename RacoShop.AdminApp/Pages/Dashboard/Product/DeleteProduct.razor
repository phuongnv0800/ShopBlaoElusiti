@inject IToastService ToastService
@inject IProductApiClient ProductApiClient

<div class="simple-form">
    <div class="form-group pb-4">
        Are you sure you want to delete the record?
    </div>

    <button @onclick="Yes" class="btn btn-outline-danger">Delete</button>
    <button @onclick="No" class="btn btn-primary">Cancel</button>
</div>

@code {
    [CascadingParameter]
    BlazoredModalInstance ModalInstance { get; set; }

    [Parameter]
    public int Id { get; set; }
    void Yes()
    {
        ProductApiClient.DeleteProduct(Id);
        ToastService.ShowError("Xoá thành công", "Xoá sản phẩm");
        ModalInstance.CloseAsync(ModalResult.Ok<bool>(true));
    }

    void No()
    {
        ModalInstance.CloseAsync(ModalResult.Cancel());
    }

}